@keyframes fadeIn {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

.bk-image {
  border-radius: 5px;
  overflow: hidden;
  &.animationend {
    background-color: transparent;
  }

  & > img {

    opacity: 0;

    &.loaded,
    &.error {
      animation: fadeIn 0.2s ease 0s 1 normal both;
    }
  }
}
