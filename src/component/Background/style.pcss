.bk-bg {
  position: fixed;
  background-color: var(--themeBackgroundColor);
  inset-inline-start: 0;
  inset-block-start: 0;
  block-size: 100vh;
  margin: 0;
  padding: 0;
  inline-size: 100%;
  box-sizing: border-box;
  z-index: -1;
  overflow: hidden;
}

.bk-bg__image {
  display: block;
  inline-size: 100%;
  block-size: 100%;
  object-fit: cover;
  border-radius: var(--themeRadius);
  object-position: top center;
  transition: opacity 0.5s;
}
